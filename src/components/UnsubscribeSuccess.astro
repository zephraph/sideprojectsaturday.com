---
interface Props {
	email: string;
}

const { email } = Astro.props;
---

<div class="space-y-4">
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="flex items-center">
            <svg
                class="w-5 h-5 text-green-600 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"
                />
            </svg>
            <span class="text-green-800 font-medium">
                Successfully unsubscribed!
            </span>
        </div>
    </div>

    <div class="text-gray-600 space-y-2">
        <p>
            You've been unsubscribed from Side Project
            Saturday event notifications.
        </p>
        <p class="text-sm">
            <strong>Email:</strong> {email}
        </p>
        <p class="text-sm">
            You can re-subscribe anytime by visiting our
            website and signing in.
        </p>
    </div>

    <div class="pt-4">
        <a
            href="/"
            class="inline-flex items-center px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white font-medium rounded-lg transition-colors"
        >
            Return to Homepage
        </a>
    </div>
</div>