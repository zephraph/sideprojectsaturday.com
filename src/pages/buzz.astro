---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Buzz In - Side Project Saturday">
	<div class="min-h-screen bg-gradient-to-br from-amber-50 to-orange-100 flex items-center justify-center p-4">
		<div class="max-w-md w-full">
			<div class="bg-white rounded-2xl shadow-xl p-8 text-center">
				<!-- Loading State -->
				<div id="loading-state" class="block">
					<h1 class="text-3xl font-bold text-gray-800 mb-6">
						ğŸ¢ Building Entry
					</h1>
					<div class="mb-6">
						<div class="loader"></div>
					</div>
					<p class="text-gray-600">Opening door...</p>
				</div>
				
				<!-- Success State -->
				<div id="success-state" class="hidden">
					<div class="mb-6">
						<div class="success-icon">âœ…</div>
					</div>
					<h2 class="text-2xl font-bold text-green-700 mb-4">
						Door Opened!
					</h2>
					<p class="text-gray-600 mb-6">
						Come on up to the 5th floor. Take the elevator or stairs.
